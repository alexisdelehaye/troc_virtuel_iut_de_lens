{% extends 'admin/base.html.twig' %}

{% block title %}Liste des profil utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des profil utilisateurs <a href="{{ path('admin_profil_new') }}" class="btn btn-success btn-sm"> Ajouter un
            profil</a></h1>
    <div class="table-responsive-md">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for profil in profils %}
                <tr>
                    <td>{{ profil.idprofil }}</td>
                    <td>{{ profil.nomprofil }}</td>
                    <td>
                        <a href="{{ path('admin_profil_edit', {'idprofil': profil.idprofil}) }}" class="btn btn-primary">Editer</a>
                        {% include 'admin/profil/_delete_form.html.twig' %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}