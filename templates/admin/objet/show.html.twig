                TODO
                {# TODO #}
            </div>
        </div>
    </div>

    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="{{ path('admin_objet_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
        <a href="{{ path('admin_objet_edit', {'idobjet': objet.idobjet}) }}" class="btn btn-primary">Editer</a>
        {{ include('admin/objet/_delete_form.html.twig') }}
    </div>
{% endblock %}