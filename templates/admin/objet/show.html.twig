{% extends 'admin/base.html.twig' %}

{% block title %}{{ objet.nomobjet }} - Voir{% endblock %}

{% block body %}
    <h1>Objet {{ objet.nomobjet }}</h1>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h2>Information sur l'objet</h2>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ objet.idobjet }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ objet.nomobjet }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ objet.descriptionobjet }}</td>
                    </tr>
                    <tr>
                        <th>Categorie</th>
                        <td>{{ objet.idcategorie }}</td>
                    </tr>
                    <tr>
                        <th>Utilisateur</th>
                        <td>{{ objet.idproprietaire }}</td>
                    </tr>
                    <tr>
                        <th>Disponible ?</th>
                        <td>{{ objet.disponible ? 'oui' : 'non' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm">
                <h2>Liste des photos / </h2>
                {% for photo in objet.photos %}
                    <a href="{{ path('admin_objet_photos', {'idobjet' : objet.idobjet}) }}"><img src="{{ base_url }}{{ photo.cheminphoto }}" class="miniaphoto" /></a>
                {% else %}
                    <p>Pas de photos</p>
                {% endfor %}
