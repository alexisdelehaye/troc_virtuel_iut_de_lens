<form method="post" action="{{ path('demande_delete', {'iddemande': demande.iddemande}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.iddemande) }}">
    <button class="btn">Delete</button>
</form>
