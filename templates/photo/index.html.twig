{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idphoto</th>
                <th>Cheminphoto</th>
                <th>Imageprincipale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.idphoto }}</td>
                <td>{{ photo.cheminphoto }}</td>
                <td>{{ photo.imageprincipale ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('photo_show', {'idphoto': photo.idphoto}) }}">show</a>
                    <a href="{{ path('photo_edit', {'idphoto': photo.idphoto}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('photo_new') }}">Create new</a>
{% endblock %}
