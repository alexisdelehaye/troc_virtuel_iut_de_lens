{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="formulaire">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <h1 class="h3 mb-3 font-weight-normal glitchConnexionTitre">>_ CONNEXION</h1>

            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Pseudo" required autofocus />
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required />
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            <button class="btn btn-lg btn-primary" type="submit">
                CONNEXION
            </button>
            <a class="link_register" href="{{ path('user_registration') }}">Pas encore inscris ?</a>
        </form>

    </div>

{% endblock %}
